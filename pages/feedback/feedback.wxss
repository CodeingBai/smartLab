.calculate-btn {
  display: block;
  margin-top: 60rpx;
  background-color: #379be9 ;
  color: white;
  font-weight: normal;
}
.title {
  display: block;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  border-bottom: 1rpx solid #ccc;
  margin-top: 10rpx;
}
.trouble {
  width: 92%;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.trouble text {
  color: #aaa;
  width: 100%;
  height: 100%;
}
.situtaion {
  width: 92%;
  margin: 0 auto;
  margin-top: 26rpx;
  border: 2rpx solid #76a78a;
  border-radius: 24rpx;
  padding: 8rpx 16rpx;
}
.situtaion text {
  display: block;
  font-size: 28rpx;
}
.label {
  width: 50%;
  float: left;
  margin-top: 14rpx;
  margin-bottom: 16rpx;
}
.label radio {
  width: 18rpx;
  height: 18rpx;
}
.label-text {
  font-size: 24rpx;
  margin-left: 38rpx;
}
.clear-bfc {
  clear: both;
}
.form {
  margin-top: 40rpx;
  border-top: 1rpx solid #ccc;
}
.detail {
  margin: 0 auto;
  width: 86%;
  margin-top: 36rpx;
  border: 2rpx solid #aaa;
  border-radius: 18rpx;
  padding: 16rpx;
  font-size: 26rpx;
  min-height: 300rpx;
}
.connection {
  width: 90%;
  margin: 0 auto;
  margin-top: 26rpx;
  position: relative;
}
.connection-label {
  font-size: 24rpx;
  margin-left: 20rpx;
}
.connection-input {
  position: absolute;
  left: 180rpx;
  top: 0;
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  height: 52rpx;
  width: 380rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.tiggle {
  width: 160rpx;
  font-size: 24rpx;
  text-align: center;
  box-sizing: border-box;
  height: 120rpx;
  background-color: #aaa;
  color: #fff;
  position: absolute;
  line-height: 120rpx;
  left: 45%;
  top: 45%;
  border-radius: 24rpx;
  border: 2rpx solid #fff;
}
.feed-back-page {
  position: relative;
}