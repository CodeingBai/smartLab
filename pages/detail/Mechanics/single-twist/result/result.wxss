/* pages/detail/Mechanics/single-twist/single-twist.wxss */
@import '../../../../../style/index.wxss';
.detail-title {
  display: block;
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  height: 44rpx;
  font-size: 40rpx;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.input-block {
  width: 600rpx;
  box-sizing: border-box;
  margin: 0 auto;
  position: relative;
  margin-top: 16rpx;
}
.input-lable,
.input-unit,
.input-value{
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.input-value {
  text-align: center;
  border: 1px solid #aaa;
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.input-lable {
  float: left;
}
.input-unit {
  position: absolute;
  top: 0;
  left: 500rpx;
}
.table-title {
  width: 490rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background-color: #ccc;
  display: block;
  border: 2rpx solid #ccc;
  text-align:center;
}
.table {
  border: 0px solid darkgray;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.tr {
  display: flex;
  width: 450rpx;
  align-items: center;
  
}
.result-detail {
  width: 92%;
  margin: 18rpx auto;
  box-sizing: border-box;
  font-size: 32rpx;
  display: block;
  padding: 10rpx;
  margin-bottom: 30rpx;
  border:2rpx solid #aaa ;
  border-radius: 24rpx;
  box-shadow: 4rpx 4rpx 2rpx #ccc;
}
.result-detail view {
  font-size: 28rpx;
}