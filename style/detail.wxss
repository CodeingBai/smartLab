/* 
@import '../../../../style/detail.wxss';
 */

/* 信息段 */
.detail-title {
  display: block;
  box-sizing: border-box;
  width: 100%;
  text-align: center;
  height: 44rpx;
  font-size: 40rpx;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.note{
  width: 750rpx;
  display: block;
  text-align: center;
  font-size: 32rpx;
  color: #ff0f0f;
  display: block;
  border: 1rpx solid #ccc;
  margin-top: 26rpx;
}

/* 输入参数区域 */
.input-block {
  display: flex;
  width: 600rpx;
  box-sizing: border-box;
  margin: 0 auto;
  position: relative;
  margin-top: 16rpx;
}
.input-lable,
.input-unit,
.input-value{
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.input-value {
  box-sizing: border-box;
  text-align: center;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  width: 160rpx;
  height: 60rpx;
  left: auto;
  line-height: 60rpx;
  margin-left: 8rpx;
}
.input-value:hover {
  border: 4rpx solid #00B8C4;
}
.input-lable {
  float: left;
  margin-right: 8rpx;
}
.input-unit {
  top: 0;
  padding: 5rpx;
  /* font-style: italic; */
}

/* 输入表格区域 */
.table-title {
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  display: block;
  text-align:center;
}
.table-name {
  display: block;
  margin-left: 20rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.table {
  font-size: 26rpx;
  margin-top: 30rpx;
}

.table-item {
  width: 100%;
  height: 100%;

}
.table-item:checked {
  border: 2rpx solid #F56E3F;
}
.tr {
  display: flex;
  width: 1104rpx;
  align-items: center;
}
.td {
  box-sizing: border-box;
  width: 154rpx;
  height: 60rpx;
  justify-content: center;
  text-align: center;
  word-wrap: break-word;
  flex-shrink: 0;
  line-height: 60rpx;
  border: 2rpx solid #ccc;
}
.td:first-child {
  width: 180rpx;
}

.td:active {
  background-color: #FEF78C;
}

/* 功能性按钮 */
.calculate-btn {
  display: block;
  margin-top: 60rpx;
  background-color: #379be9 ;
  color: white;
  font-weight: normal;
}
.page-jump-btn {
  display: block;
  margin-top: 30rpx;
  background-color: #F56E3F ;
  color: white;
  font-weight: normal;
}
button:active {
  background-color: #aaa;
  color: #fff;
  opacity: 0.5;  
}
feed-back-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
}


/* 计算结果区域 */
.result-detail {
  width: 92%;
  margin: 18rpx auto;
  box-sizing: border-box;
  font-size: 32rpx;
  display: block;
  padding: 10rpx;
  margin-bottom: 0rpx;
  border:2rpx solid #aaa ;
  border-radius: 24rpx;
  box-shadow: 4rpx 4rpx 2rpx #ccc;
}
.result-detail text{
  display: block;
}
.detail-info {
  font-size: 28rpx;
  display: block;
  box-sizing: border-box;
}
/* 上标与下标 */
sup{
  font-size: 10px;
  vertical-align:text-top;
}
sub{
  font-size: 10px;
  vertical-align:text-bottom;
  font-style: oblique;
}